{
  "name": "@awlt/design",
  "version": "0.0.2",
  "description": "A react UI component library & design system",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/altierawr/design.git"
  },
  "bugs": {
    "url": "https://github.com/altierawr/design/issues"
  },
  "homepage": "https://github.com/altierawr/design#readme",
  "author": "altierawr <github.com/altierawr>",
  "keywords": [],
  "license": "MIT",
  "files": [
    "lib"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./styles.css": "./lib/styles.css",
    "./components.css": "./lib/index.css",
    "./colors/*.css": "./lib/colors/*.css"
  },
  "scripts": {
    "build": "pnpm build:lib && pnpm build:ts && pnpm build:css && pnpm build:colors",
    "build:colors": "mkdir -p lib/colors && cp src/styles/tokens/colors/*.css lib/colors/",
    "build:colors:w": "nodemon --watch src/styles/tokens/colors --ext css --exec \"pnpm build:colors\"",
    "build:w": "concurrently \"pnpm build:ts:w\" \"pnpm build:lib:w\" \"pnpm build:css:w\" \"pnpm build:colors:w\"",
    "build:css": "postcss src/styles/index.css -o lib/styles.css",
    "build:css:w": "postcss -w src/styles/index.css -o lib/styles.css",
    "build:lib": "vite build --outDir lib -c vitebuild.config.js",
    "build:lib:w": "vite build -w --emptyOutDir false --outDir lib -c vitebuild.config.js",
    "build:ts": "tsc -p tsconfig.prod.json",
    "build:ts:w": "tsc -w -p tsconfig.prod.json",
    "format": "prettier . --write",
    "lint": "oxlint && eslint ./src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "storybook": "storybook dev -p 6006 --no-open",
    "build:storybook": "storybook build"
  },
  "engines": {
    "node": "24"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@radix-ui/colors": "^3.0.0",
    "@tabler/icons-react": "^3.35.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react-aria-components": "^1.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@storybook/addon-docs": "10.0.8",
    "@storybook/addon-onboarding": "10.0.8",
    "@storybook/react-vite": "10.0.8",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vueless/storybook-dark-mode": "^10.0.6",
    "autoprefixer": "^10.4.22",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-oxlint": "^1.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "10.0.8",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "oxlint": "^1.29.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "prettier": "^3.6.2",
    "storybook": "10.1.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.2.2"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
